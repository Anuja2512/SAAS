<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrescriptionDetails" android:id="@+id/layout"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="Prescription Details"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="296dp"
            android:layout_height="325dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/textView23" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.494">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxCollapsedPaddingTop="4dp" android:layout_marginBottom="10dp">

            <TextView
                    android:text="Select Medicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/medtext"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:padding="12dp"
                    android:hint="Select Meal Item"
                    android:fontFamily="@font/amaranthh"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:background="@android:drawable/editbox_background"
                    android:textSize="18sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent" app:boxCollapsedPaddingTop="4dp"
                android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dosetext"
                android:layout_width="286dp"
                android:layout_height="54dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/amaranth_italic"
                android:hint="Dosage" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent" app:boxCollapsedPaddingTop="4dp"
                android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/destext"
                android:layout_width="289dp"
                android:layout_height="101dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/amaranth_italic"
                android:gravity="left"
                android:hint="Description" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="Add Medicine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" android:background="@drawable/button_background"
            app:backgroundTint="@color/Headings"/>
</androidx.constraintlayout.widget.ConstraintLayout>